        <label>
            Product number
        </label>
        <input type="text" name="StockId" required />
        <label>
            Unit Price
        </label>
        <input type="number" name="UnitPrice" required />
        <label>
            Quantity
        </label>
        <input type="number" name="Quantity" required />
        <label>
            Cost Price
        </label>
        <input type="number" name="CostPrice" required />
