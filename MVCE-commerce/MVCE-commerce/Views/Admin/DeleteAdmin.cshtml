@model MVCE_commerce.DTO.AdminDTO
<div>
    <dl>
        <dd>
            Id:
        </dd>
        <dt>
            @Model.AdminId
        </dt>
        <dd>
            Name:
        </dd>
        <dt>
            @Model.FirstName
        </dt>
    </dl>
    <span>
        Are you sure you want to delete this Admin
    </span>
    <form asp-action="DeleteAdmin">
        <input type="hidden" asp-for="@Model.AdminId"/>
        <input type="submit" value="Delete" class="btn btn-danger" required />
        <a asp-action="Index">Back to list</a>
    </form>

</div>
