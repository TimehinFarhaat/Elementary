@model MVCE_commerce.DTO.CustomerDTO
<div>
    <dl>
        <dd>
            Id:
        </dd>
        <dt>
            @Model.CustomerId
        </dt>
        <dd>
            Name:
        </dd>
        <dt>
            @Model.FirstName
        </dt>
    </dl>
    <span>
        Are you sure you want to delete this customer
    </span>
    <form asp-action="DeleteCustomer">
        <input type="hidden" asp-for="@Model.CustomerId" />
        <input type="submit" value="Delete" class="btn btn-danger" required />
        <a asp-action="Index">Back to list</a>
    </form>

</div>
