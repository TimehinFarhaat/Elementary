@model MVCE_commerce.DTO.StockDTO
<div>
    <dl>
        <dd>
            Id:
        </dd>
        <dt>
            @Model.Id
        </dt>
        <dd>
            Number:
        </dd>
        <dt>
            @Model.StockNo
        </dt>
    </dl>
    <span>
        Are you sure you want to delete this stock
    </span>
    <form asp-action="DeleteStock">
        <input type="hidden" asp-for="@Model.StockNo" />
        <input type="submit" value="Delete" class="btn btn-danger" required />
        <a asp-action="Index">Back to list</a>
    </form>

</div>
