@model WebApplication3.Entities.Student
<div>
    <form asp-action="Edit">
        <div>
            <label>
                Name*
            </label>
            <input type="text" name="FirstName" value="@Model.FirstName" required />

            <label>
                SurName*
            </label>
            <input type="text" name="LastName" value="@Model.LastName" required />
            <label>
                Age*
            </label>
            <input type="number" name="Age" value=@Model.Age required />
            <label>
                Email*
            </label>
            <input type="email" name="Email" value="@Model.Email" required />
            <label>
                Department
            </label>
            <select asp-for="DepartmentId" asp-items="ViewBag.Departments">
                <option selected disabled>--Select Department--</option>
            </select>

            <div>
                <input type="submit" value="submit" />
            </div>
        </div>
    </form>
</div>
